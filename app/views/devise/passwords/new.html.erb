<div class="container-fluid py-5 d-flex justify-content-center ">
    <div class="loginbox shadow p-3 mb-5 bg-body rounded">


        <h2 class="mb-5 d-flex justify-content-center">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-4"%>
        </div>

        <div class="actions d-grid gap-2 col-6 mx-auto mb-3">
            <%= f.submit "reset password", class: "btn btn-primary"%>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>


    </div>
</div>